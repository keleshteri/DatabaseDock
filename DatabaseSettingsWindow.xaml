<Window x:Class="DatabaseDock.DatabaseSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseDock"
        mc:Ignorable="d"
        Title="Database Settings" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Database Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Database Type & Version -->
                <GroupBox Header="Database Information" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Database Type:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="DatabaseTypeTextBox" IsReadOnly="True" Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Version:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="VersionTextBox" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Connection Settings -->
                <GroupBox Header="Connection Settings" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Port:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="PortTextBox" Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Username:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="UsernameTextBox" Margin="0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:" VerticalAlignment="Center"/>
                        <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="PasswordBox" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- Volume Settings -->
                <GroupBox Header="Volume Settings" Padding="10" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Volume Path:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="VolumePathTextBox" Margin="0,5"/>
                        <Button Grid.Column="2" Content="Browse..." Margin="5,5,0,5" Padding="10,0" Click="BrowseVolumePath_Click"/>
                    </Grid>
                </GroupBox>

                <!-- Advanced Settings -->
                <GroupBox Header="Advanced Settings" Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,5"/>
                        <CheckBox x:Name="AutoStartCheckBox" Content="Auto-start this database when application launches" Margin="0,5"/>
                        
                        <TextBlock Text="Environment Variables:" Margin="0,10,0,5"/>
                        <TextBox x:Name="EnvironmentVariablesTextBox" AcceptsReturn="True" Height="80" 
                                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Save" Width="80" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
