<Window x:Class="DatabaseDock.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseDock"
        mc:Ignorable="d"
        Title="Logs" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with tabs -->
        <TabControl x:Name="LogTabs" Grid.Row="0" Background="#F0F0F0" SelectionChanged="LogTabs_SelectionChanged">
            <TabItem Header="Application Logs" Name="AppLogsTab"/>
            <TabItem Header="All Docker Logs" Name="AllDockerLogsTab"/>
        </TabControl>

        <!-- Log Content -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" Margin="10">
            <ListView x:Name="LogItemsListView" ItemsSource="{Binding CurrentLogs}" Background="White" FontFamily="Consolas">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=., StringFormat='{}{0}'}" TextWrapping="NoWrap" Foreground="{Binding Type, Converter={StaticResource LogTypeToColorConverter}}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Footer with controls -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="StatusTextBlock" Grid.Column="0" Text="Ready" VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Clear Logs" Width="80" Margin="0,0,5,0" Click="ClearLogs_Click"/>
                <Button Content="Copy to Clipboard" Width="120" Margin="5,0,0,0" Click="CopyLogs_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
